<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/image_banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:alpha="0.8"
        app:srcCompat="@color/colorPrimary" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_img"
        android:layout_width="79dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/usermale"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/iduser"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/profile_img"
        android:text="iduser"
        android:textAlignment="textStart"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/iduser"
        android:ems="3"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="none" />

    <EditText
        android:id="@+id/biografia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/black"
        android:ems="10"
        android:hint="Biografia"
        android:inputType="none" />

    <EditText
        android:id="@+id/ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/biografia"
        android:backgroundTint="@color/colorPrimary"
        android:hint="Location"
        android:textColor="@android:color/black"
        android:ems="10"
        android:inputType="none" />

    <EditText
        android:id="@+id/sitio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:textColor="@android:color/black"
        android:layout_below="@+id/ubicacion"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@android:color/darker_gray"
        android:hint="Sitio Web"
        android:inputType="textPersonName" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateprofile"
        android:layout_width="153dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="114dp"
        android:layout_below="@+id/sitio"
        android:fontFamily="@font/capriola"
        android:text="Actualizar"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        />



</RelativeLayout>